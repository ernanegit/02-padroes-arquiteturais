{
  "name": "02-padroes-arquiteturais",
  "version": "1.0.0",
  "description": "Sistema de e-commerce demonstrando padrÃµes arquiteturais com TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/data/seeders/index.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up --build -d",
    
    "exercise:products": "tsx scripts/exercises/products.ts",
    "exercise:auth": "tsx scripts/exercises/auth.ts",
    "exercise:cart": "tsx scripts/exercises/cart.ts",
    "exercise:payment": "tsx scripts/exercises/payment.ts",
    "exercise:tests": "tsx scripts/exercises/tests.ts"
  },
  "keywords": [
    "architecture",
    "patterns",
    "typescript",
    "clean-architecture",
    "hexagonal",
    "repository-pattern",
    "dependency-injection",
    "ecommerce"
  ],
  "author": "Erne - Estudante de Arquitetura de Software",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    
    "@prisma/client": "^5.1.1",
    "prisma": "^5.1.1",
    
    "redis": "^4.6.7",
    
    "zod": "^3.21.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "uuid": "^9.0.0",
    
    "winston": "^3.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
